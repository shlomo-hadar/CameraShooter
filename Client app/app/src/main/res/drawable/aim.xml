<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <!-- this is the outside circle -->
    <item>
        <shape android:shape="oval">
            <size android:width="360dp" android:height="360dp"/>
            <padding android:bottom="5dp" android:left="5dp" android:right="5dp" android:top="5dp" />
            <stroke android:color="@color/colorAccent" android:width="3dp"/>
        </shape>
    </item>

    <!-- this is the vertical line -->
    <item>
        <rotate android:fromDegrees="90" android:toDegrees="90">
            <shape android:shape="line">
                <stroke android:color="@color/colorAccent" android:width="1dp"/>
            </shape>
        </rotate>
    </item>

    <!-- this is the horizontal line -->

    <item>
        <shape android:shape="line">
            <stroke android:color="@color/colorAccent" android:width="1dp"/>
        </shape>
    </item>

    <!-- this is the inner circle -->
    <item>
        <shape android:shape="oval">
            <stroke android:color="@color/colorAccent" android:width="2dp"/>
        </shape>
    </item>

</layer-list>